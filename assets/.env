# PDFChamp Environment Configuration
# Copy this file and configure with your actual credentials

# ======================
# SUPABASE CONFIGURATION
# ======================
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Supabase Storage Bucket Names
SUPABASE_PDF_BUCKET=pdfs
SUPABASE_THUMBNAIL_BUCKET=thumbnails
SUPABASE_FONTS_BUCKET=fonts

# ======================
# OPENAI CONFIGURATION
# ======================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORGANIZATION_ID=org-your-organization-id # Optional

# AI Assistant Settings
AI_MODEL=gpt-4-turbo-preview
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7
AI_ASSISTANT_NAME=PDFChamp AI

# ======================
# APPLICATION SETTINGS
# ======================
APP_NAME=PDFChamp
APP_VERSION=1.0.0
APP_ENV=development # development, staging, production

# Feature Flags
ENABLE_AI_ASSISTANT=true
ENABLE_CLOUD_SYNC=true
ENABLE_ANALYTICS=false
ENABLE_DEBUG_LOGS=true

# UI Settings
DEFAULT_THEME=dark # light, dark, system
ENABLE_ANIMATIONS=true
ANIMATION_SPEED=300 # milliseconds

# Performance Settings
PDF_CACHE_SIZE_MB=100
IMAGE_CACHE_SIZE_MB=50
MAX_RECENT_FILES=20
AUTO_SAVE_INTERVAL_SECONDS=30

# ======================
# DATABASE CONFIGURATION
# ======================
# Local Database
LOCAL_DB_NAME=pdfchamp_local
LOCAL_DB_VERSION=1

# Sync Settings
SYNC_INTERVAL_MINUTES=5
OFFLINE_MODE_ENABLED=true

# ======================
# SECURITY
# ======================
ENCRYPTION_ENABLED=true
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5

# ======================
# THIRD PARTY SERVICES
# ======================
# Google Fonts API (optional)
GOOGLE_FONTS_API_KEY=your-google-fonts-api-key # Optional

# Sentry (Error Tracking - optional)
SENTRY_DSN=your-sentry-dsn # Optional

# ======================
# DEVELOPMENT ONLY
# ======================
# Mock Services (for testing without real APIs)
MOCK_SUPABASE=false
MOCK_OPENAI=false
VERBOSE_LOGGING=true
